<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/scrollView"
    android:scrollbars="none"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".AddNewSiteActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#696969"
            android:id="@+id/hr" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="搜尋地點"
            android:ems="10"
            android:id="@+id/searchMapQuery" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/searchMapSuggestion" />


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            map:zOrderOnTop="true"
            map:uiZoomControls="true" />

        <LinearLayout
            android:id="@+id/layout_newsite_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_name"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_name"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_site_name"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newname"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="名稱"
                    android:ems="10"
                    android:id="@+id/sName"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_time"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_time"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="開放時間"
                    android:ems="10"
                    android:id="@+id/new_sTime"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_desc"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_desc"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/info_2"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/description"
                    android:hint="描述"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_phone"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_phone"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_phone"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/phone"
                    android:hint="電話"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_trans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_trans"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_trans"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_trans"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/transportation"
                    android:hint="交通方式"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_email"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_email"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_email"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_website"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_website"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_website"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_web"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_website"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textWebEditText"
                    android:ems="10"
                    android:id="@+id/website"
                    android:hint="網站"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_activity"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_activity"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_pricetag"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/activity"
                    android:hint="活動"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_newsite_note"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_layout_height"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/left_layout_newsite_note"
                android:layout_width="@dimen/info_left_layout_width"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ic_newsite_note"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_quote"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/right_layout_newsite_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/note"
                    android:hint="活動"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchStart"
            android:src="@drawable/abc_ic_search_api_material"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchMapQueryClean"
            android:src="@drawable/abc_ic_clear_material"
            android:layout_alignTop="@+id/searchStart"
            android:layout_toLeftOf="@+id/searchStart"
            android:layout_toStartOf="@+id/searchStart" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:src="@android:drawable/ic_input_add"
            android:layout_alignTop="@+id/searchMapQueryClean"
            android:layout_toLeftOf="@+id/searchMapQueryClean"
            android:layout_toStartOf="@+id/searchMapQueryClean"
            android:layout_alignBottom="@+id/searchMapQueryClean" />

    </LinearLayout>


</ScrollView>